{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "support-portal"
  },
  "apps": [
    {
      "name": "core",
      "root": "src",
      "outDir": "dist",
      "assets": [
        "assets",
        "favicon.ico",
        "search.html"
      ],
      "index": "index.html",
      "main": "core.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "core",
      "styles": [
        "./assets/css/app.css",
        "./assets/css-coveo/coveofullsearchnewdesign.css",
        "styles.css"
      ],
      "scripts": [
        "./assets/js/app.js",
        "./assets/js-vendor/CoveoJsSearch.js",
        "./assets/js-vendor/templatesNew.js",
        "./assets/js/coveo-context.js",
        "./assets/js/coveo-config.js",
        "./assets/js/app-coveo.js",
        "./assets/js/coveo-angular.js",
        "./assets/js-vendor/URI.js"
      ],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "qa": "environments/environment.qa.ts",
        "prod": "environments/environment.prod.ts"
      }
    },
    {
      "name": "portal",
      "root": "src",
      "outDir": "dist",
      "index": "index.html",
      "main": "portal.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "portal",
      "styles": [],
      "scripts": [],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "src/tsconfig.app.json"
    },
    {
      "project": "src/tsconfig.spec.json"
    },
    {
      "project": "e2e/tsconfig.e2e.json"
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "css",
    "component": {}
  }
}
